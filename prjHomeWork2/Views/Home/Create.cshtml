@model prjHomeWork2.Models.Member

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="inputName" asp-for="Name"  class="form-control" />
                <div id="txtWarning"></div>
                
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
        const iptName = $("#inputName");
        const txtWarning = $('#txtWarning');

    iptName.blur(() => {

        $.get("@Url.Content("~/Api/CheckName")", { "Name": iptName.val() }, (data) => {

            txtWarning.text(data);
        })
    });



</script>



}
